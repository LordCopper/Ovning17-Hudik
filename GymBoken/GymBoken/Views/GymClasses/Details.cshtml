@model GymBoken.Models.GymClass

@{
    ViewBag.Title = "Passdetaljer";
}

<h2>Passdetaljer</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AttendingMembers)
        </dt>

        @foreach (var AttendingMember in Model.AttendingMembers)
        {
            <dd>
                @AttendingMember.FullName
            </dd>
        }

    </dl>
</div>
<p>
    @if (User.IsInRole("Admin") && Model.EndTime > DateTime.Now) {
        @Html.ActionLink("Ändra pass", "Edit", new { id = Model.Id }) <span>|</span>
    }
    @Html.ActionLink("Tillbaka till passlistan", "Index")
</p>
